<!DOCTYPE html>
<html>
<head>
    <title>Add author</title>
</head>
<body>
<h1>Add author</h1>

<form method="post" action="{{ path('create') }}">
    {{ form_start(form) }}

    {{ form_row(form.username, {'label': 'Username'}) }}
    {{ form_row(form.email, {'label': 'Email'}) }}

    <button type="submit" class="btn btn-primary">Save</button>

    {{ form_end(form) }}
</form>

<a href="{{ path('fetch') }}">Return to authors list</a>
</body>
</html>